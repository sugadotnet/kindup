@model APPBASE.Models.WarningdetailVM
@using APPBASE.Helpers

@{string vsErrClass = "";}
@{string vsDisableButton = "";}
@{Boolean isShowDropdown = true;}
@{string vsReadonlyTextboxKey = "Readonly";}
@{string vsReadonlyTextbox = "";}
@if (ViewBag.CRUD_type == hlpFlags_CRUDOption.CREATE) { vsReadonlyTextboxKey = ""; }
@if ((ViewBag.CRUD_type == hlpFlags_CRUDOption.VIEW) || (ViewBag.CRUD_type == hlpFlags_CRUDOption.DELETE)) { vsDisableButton = "disabled"; vsReadonlyTextbox = "Readonly"; isShowDropdown = false; }
@{string vsDateFormat = "'alias': 'dd/mm/yyyy'";}

<div class="row">
    @Html.HiddenFor(model => model.USERNAME_ID, new { id = "USERNAME_ID" })
    <div class="col-xs-12">
        @if (ViewData.ModelState["USERNAME_ID0"] != null) { vsErrClass = "has-error"; } else { vsErrClass = ""; }
        <div class="form-group @vsErrClass">
            <label for="TEACHER_DISPLAY_NAME">Pilih Guru</label>


            <div class="input-group input-group-sm">
                <input type="text" id="TEACHER_DISPLAY_NAME" name="TEACHER_DISPLAY_NAME" value="@Html.DisplayFor(model => model.TEACHER_DISPLAY_NAME)" class="form-control" readonly />
                <span class="input-group-btn">
                    <button type="button" id="cmdLookupUSERNAME_ID" name="cmdLookupUSERNAME_ID" class="btn btn-info btn-flat" data-toggle="modal" data-target="#DialogLookup" @vsDisableButton><i class="fa fa-search"></i></button>
                </span>
            </div><!-- /input-group -->

            
            @if (ViewData.ModelState["USERNAME_ID1"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("USERNAME_ID1")
                    </label>
            }
            @if (ViewData.ModelState["USERNAME_ID2"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("USERNAME_ID2")
                    </label>
            }
        </div> <!-- /.form-group -->
    </div> <!-- /.col-xs-12 -->
</div><!-- /.row -->

<hr />

<div class="row">
    <div class="col-xs-12">
        @if (ViewData.ModelState["TITLE0"] != null) { vsErrClass = "has-error"; } else { vsErrClass = ""; }
        <div class="form-group @vsErrClass">
            <label for="TITLE">Perihal</label>
            <input type="text" id="TITLE" name="TITLE" value="@Html.DisplayFor(model => model.TITLE)" class="form-control VARCHAR" maxlength = "50" @vsReadonlyTextbox />

            @if (ViewData.ModelState["TITLE1"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("TITLE1")
                    </label>
            }
            @if (ViewData.ModelState["TITLE2"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("TITLE2")
                    </label>
            }
        </div> <!-- /.form-group -->
    </div> <!-- /.col-xs-12 -->
</div><!-- /.row -->
<div class="row">
    <div class="col-xs-12">
        @if (ViewData.ModelState["FULL_DESC0"] != null) { vsErrClass = "has-error"; } else { vsErrClass = ""; }
        <div class="form-group @vsErrClass">
            <label for="FULL_DESC">Deskripsi</label>
            <textarea id="FULL_DESC" name="FULL_DESC" class="form-control" maxlength="1000" @vsReadonlyTextbox>@Html.DisplayFor(model => model.FULL_DESC)</textarea>


            @if (ViewData.ModelState["FULL_DESC1"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("FULL_DESC1")
                    </label>
            }
            @if (ViewData.ModelState["FULL_DESC2"] != null)
            {
                    <label class="control-label" for="inputError">
                    <i class="fa fa-times-circle-o"></i> @Html.ValidationMessage("FULL_DESC2")
                    </label>
            }
        </div> <!-- /.form-group -->
    </div> <!-- /.col-xs-12 -->
</div><!-- /.row -->
