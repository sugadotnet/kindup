@model IEnumerable<APPBASE.Models.ClassroomteacherdetailVM>
@using APPBASE.Helpers
@using APPBASE.Svcbiz

@{
    ViewBag.Title = "Info Kelompok Guru";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{string vsClassBP_STS = "";}

<div class="box box-info">
    <div class="box-header">
        <h3 class="box-title"></h3>
        <div class="box-tools">
            <div class="input-group">
                <input type="text" id="searchValue" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Filter Data"/>
                <div class="input-group-btn">
                    <button class="btn btn-flat btn-sm btn-info"><i class="fa fa-search"></i></button>
                    <a href="@Url.Action("Create")" class="btn btn-flat btn-sm btn-warning" style="margin-left:5px; color:White;"><i class="fa fa-plus"></i> Tambah Kelompok Guru</a>
                </div>
            </div>
        </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @if (Model == null) {
                    <tr>
                        <td colspan="2" align="center">@{Html.RenderPartial("_PartialEmpty");}</td>
                    </tr>
                }

                @foreach (var item in Model)
                {
                    
                    <tr>
                        <td class="SEARCHABLE_ROWS">
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label for="EMPLOYEE_ID">Kelas</label>
                                        <div class="form-control">@Html.DisplayFor(modelItem => item.CLASSTYPE_NAME)</div>
                                    </div> <!-- /.form-group -->
                                </div> <!-- /.col-xs-12 -->
                            </div><!-- /.row -->

                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label for="EMPLOYEE_ID">Kelompok</label>
                                        <div class="form-control">@Html.DisplayFor(modelItem => item.CLASSROOM_NAME)</div>
                                    </div> <!-- /.form-group -->
                                </div> <!-- /.col-xs-12 -->
                            </div><!-- /.row -->

                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                        <label for="EMPLOYEE_ID">Guru</label>
                                        <div class="form-control">@Html.DisplayFor(modelItem => item.EMPLOYEE_NAME)</div>
                                    </div> <!-- /.form-group -->
                                </div> <!-- /.col-xs-12 -->
                            </div><!-- /.row -->

                            <hr />

                            <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-flat btn-sm btn-success" style="margin-left:5px; color:White;"><i class="fa fa-eye"></i> View Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.box-body -->
</div><!-- /.box -->

@section scripts {

<script type="text/javascript">
    $(document).ready(function () {
        /*=========================================
        INITIALIZE
        =========================================*/
        doSearchAbleTable('#searchValue', '', '.SEARCHABLE_ROWS');

        /*=========================================
        EVENTS
        =========================================*/
    });   //End $(document).ready
</script>

}
