
<!-- Default box -->
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Filter Kegiatan</h3>
        <div class="box-tools pull-right">
            <button id="BTN_CREATE" class="btn btn-flat btn-sm btn-warning" style="margin-left:5px; color:White;"><i class="fa fa-plus"></i> Add Data</button>
            <button class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
            <button class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <div class="box-body">
        @{Html.RenderPartial("Filter_inputs");}
    </div><!-- /.box-body -->
    <div class="box-footer">
        <div class="row">
            <div class="col-xs-12">
                <button type="submit" class="btn btn-success btn-flat"> <i class="fa fa-bars"></i> View List</button>
                <button type="button" id="reset" name="reset" class="btn btn-default btn-flat"><i class="fa  fa-eraser"></i> Clear Filter</button>
            </div>
        </div><!-- /.row -->
    </div><!-- /.box-footer-->
</div><!-- /.box -->

